<div class='products-container'>
	<div class='products-list'>

			{{#each payload}}
			<div class="product-item">

				<a href="./product/{{this._id}}" class="product-link">
					<p>PRODUCTO: {{this.title}}</p>
					<p>CATEGORIA: {{this.category}}</p>
					<p>PRECIO: ${{this.price}}</p>
					<p>STOCK: {{this.stock}}</p>
				</a>

				<form
					class='product-form'
					cart="{{../cart}}"
					product="{{this._id}}"
				>
				<input type='submit' value='agregar al carrito' class="product-button" />
			</form>

			</div>
		{{/each}}

	</div>

	<div class='paginate-container'>
		{{#if hasPrevPage}}
			<a
				href='/products?query={{query}}&limit={{limit}}&page={{prevPage}}&sort={{sort}}'
			><button class='paginate-button'>ANTERIOR</button></a>
		{{/if}}

		<p class='paginate-current'>{{page}}</p>

		{{#if hasNextPage}}
			<a
				href='/products?query={{query}}&limit={{limit}}&page={{nextPage}}&sort={{sort}}'
			><button class='paginate-button'>SIGUIENTE</button></a>
		{{/if}}
	</div>
</div>

<script src='/js/products.js'></script>